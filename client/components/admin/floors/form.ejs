<% if (typeof floor === 'undefined') { %>
  <form class="form" action="/admin/floors" method="POST">
    <div class="form-group">
      <input type="hidden" value="<%= building.building_id %>" name="building_id"/>
      <label for="name">Name</label>
      <input type="text" value="" class="form-control" name="name" placeholder="Name" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
  </form>
<% } else { %>
  <div class="panel panel-default">
    <div class="panel-heading">
      Edit Floor
    </div>
    <div class="panel-body">
      <form class="form" action="/admin/floors/<%= floor.floor_id %>/update" method="POST">
        <input type="hidden" value="<%= floor.floor_id %>" name="floor_id"/>
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" value="<%= floor.name %>" class="form-control" name="name" placeholder="Name" />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
      </form>
    </div>
  </div>
<% } %>
