<!DOCTYPE html>
<html lang="en">
  <%- include('../../layout/head.ejs') %>
  <body style="padding-top: 10px;">
    <div class="container-fluid">

      <%- include('../../components/admin-navigation.ejs') %>
      <div class="jumbotron">
        <h1>Buildings</h1>
      </div>

      <div class="row">
        <div class="col-md-6">
          <%- include('../../components/admin/buildings/form.ejs') %>
        </div>
        <div class="col-md-6">
          <div class="panel panel-default">
            <div class="panel-heading">
              Buildings list
            </div>
            <div class="list-group">
              <% buildings.forEach(function (building) { %>
                <a class="list-group-item" href="/admin/buildings/<%=building.building_id%>">
                  <h4 class="list-group-item-heading">
                    <%= building.building_id + ' ' + building.name %>
                  </h4>
                </a>
              <% }) %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('../../layout/body-end.ejs') %>
  </body>
</html>
